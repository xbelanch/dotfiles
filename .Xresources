Xft.dpi:    96
Xft.autohint: 0
Xft.antialias:  1
Xft.hinting:    1
Xft.hintstyle:  hintmedium

URxvt.termName: rxvt
URxvt.depth: 32
URxvt.transparent: false
URxvt.shading: 30
! Fix rxvt-unicode can't display some characters.
! You must install ttf-dejavu
URxvt*font: xft:Iosevka Fixed:size=18:antialias=true:hinting=true, xft:DejaVu Sans Mono

URxvt*letterSpace: 0
URxvt.scrollBar: false
URxvt*depth: 32

! Fix prompt starts at the middle of the Window
! From: https://www.reddit.com/r/archlinux/comments/105t4ye/comment/j3d4sni/
URxvt.geometry: 80x-1

! Gruber-Darker
URxvt*foreground: #e4e4ef
URxvt*background: #181818
URxvt*color0:  #2E3436
URxvt*color1:  #a40000
URxvt*color2:  #4E9A06
URxvt*color3:  #C4A000
URxvt*color4:  #3465A4
URxvt*color5:  #75507B
URxvt*color6:  #ce5c00
URxvt*color7:  #babdb9
URxvt*color8:  #555753
URxvt*color9:  #EF2929
URxvt*color10: #8AE234
URxvt*color11: #FCE94F
URxvt*color12: #729FCF
URxvt*color13: #AD7FA8
URxvt*color14: #fcaf3e
URxvt*color15: #EEEEEC

! Resize font
URxvt.perl-ext-common:  resize-font
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1
URxvt.keysym.C-minus:  resize-font:smaller
URxvt.keysym.C-equal:  resize-font:bigger
URxvt.keysym.C-0:      resize-font:reset
